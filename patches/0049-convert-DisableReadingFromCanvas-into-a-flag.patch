     "expiry_milestone": 100
   },
+  {
+    "name": "disable-reading-from-canvas",
+    "owners": [ "Douloureux@users.noreply.github.com" ],
+    "expiry_milestone": -1
+  },
   {
     "name": "disable-threaded-scrolling",
     "owners": [ "bokan", "input-dev" ],
